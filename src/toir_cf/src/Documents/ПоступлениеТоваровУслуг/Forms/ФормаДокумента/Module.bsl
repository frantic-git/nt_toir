		               |ИЗ
		               |	Справочник.Номенклатура КАК Номенклатура
		               |ГДЕ
		               |	Номенклатура.Ссылка = &Ссылка";
		Запрос.УстановитьПараметр("Ссылка", текСтрока.Номенклатура);
		
		Результат = Запрос.Выполнить();
		Если Результат.Пустой() тогда
			текСтрока.ХарактеристикиИспользуются = Ложь;
			Возврат;
		КонецЕсли;
		
		Выборка = Результат.Выбрать();
		Выборка.Следующий();
		текСтрока.ХарактеристикиИспользуются = Выборка.ИспользованиеХарактеристик;
